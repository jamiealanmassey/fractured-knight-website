<% include partials/header %>
<% include partials/header-nav %>
        <div style="margin-top: 120px; margin-bottom: 20px;">
            <div class="ui inverted main text container segment">
                <div class="ui huge header">New Blog Post</div>
                <form class="ui inverted form" action="/posts/<%=post._id%>/edit?_method=PUT" method="POST">
                    <div class="field">
                        <label>Post Title</label>
                        <input type="text" name="post[title]" placeholder="title" value="<%=post.title%>"/>
                    </div>
                    <div class="field">
                        <label>Post Subheading</label>
                        <input type="text" name="post[subheading]" placeholder="subheading" value="<%=post.subheading%>" />
                    </div>
                    <div class="field">
                        <label>Post Cover Image</label>
                        <input type="text" name="post[image]" placeholder="http://image" value="<%=post.image%>" />
                    </div>
                    <div class="field">
                        <label>Post Content</label>
                        <textarea name="post[content]"><%=post.content%></textarea>
                    </div>
                    <button class="ui button" type="submit">Update Post</button>
                </form>
            </div>
        </div>
    </body>
</html>
